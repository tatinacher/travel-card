{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
        "api": ["src/api"],
        "assets": ["src/assets"],
        "types": ["src/lib/types"],
        "pages": ["src/pages"],
        "ui": ["src/ui"]
    }
  },
  "include": ["./src/**/*"]
}
